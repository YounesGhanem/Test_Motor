{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "kill-gdb-server",
            "type": "shell",
            "command": "taskkill /IM openocd.exe /F",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],  // Added comma here
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}
